@{
    ViewData["Title"] = "Logowanie";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">
    <div class="login-box">
        <h2>LaLiga App</h2>
        <p>Zaloguj się, aby kontynuować</p>

        <form asp-action="Index" method="post" class="login-form">
            <div class="input-group">
                <label>Email</label>
                <input type="text" name="login" placeholder="Email"
                    class="@(ViewBag.Error != null ? "input-error" : "")" required />
            </div>

            <div class="input-group">
                <label>Hasło</label>
                <input type="password" name="password" placeholder="Hasło" required />
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">
                    <span class="error-icon">⚠️</span>
                    <span>@ViewBag.Error</span>
                </div>
            }

            <button type="submit" class="login-button">Zaloguj się</button>
        </form>

        <p class="register-text">
            Nie masz konta?
            <a asp-controller="Register" asp-action="Index">Zarejestruj się</a>
        </p>
    </div>
</div>
