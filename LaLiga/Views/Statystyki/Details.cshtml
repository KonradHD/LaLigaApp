@model LaLiga.Models.Statystyki

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Statystyki</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mecz)
        </dt>
        <dd class="col-sm-10">
            @(Model.mecz?.gospodarze?.nazwa_druzyny ?? "???") vs @(Model.mecz?.goscie?.nazwa_druzyny ?? "???")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.gole_gospodarzy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gole_gospodarzy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.gole_gosci)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gole_gosci)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.strzaly_gospodarzy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.strzaly_gospodarzy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.strzaly_gosci)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.strzaly_gosci)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id_meczu">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
