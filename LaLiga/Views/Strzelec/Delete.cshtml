@model LaLiga.Models.Strzelec

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Strzelec</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.zawodnik)
        </dt>
        <dd class="col-sm-10">
            @(Model.zawodnik?.imie ?? "???") @(Model.zawodnik?.nazwisko ?? "???")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mecz)
        </dt>
        <dd class="col-sm-10">
            @(Model.mecz?.gospodarze?.nazwa_druzyny ?? "???") vs @(Model.mecz?.goscie?.nazwa_druzyny ?? "???")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.gole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.gole)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.asysty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.asysty)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id_druzyny" />
        <input type="hidden" asp-for="numer" />
        <input type="hidden" asp-for="id_meczu" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
