@model LaLiga.Models.Uzytkownik

@{
    ViewData["Title"] = "Rejestracja";
}

<link rel="stylesheet" href="~/css/register.css" />

<div class="register-wrapper">
    <div class="register-box">
        <h2>Utwórz konto</h2>

        <form asp-action="Index" method="post" class="register-form">
            <div asp-validation-summary="ModelOnly" class="error-summary"></div>

            <div class="input-group">
                <input asp-for="email" placeholder="Email"
                    class="@(ViewData.ModelState["email"]?.Errors.Count > 0 ? "input-error" : "")" />
                <span asp-validation-for="email" class="error-message"></span>
            </div>

            <div class="input-group">
                <input asp-for="haslo" type="password" placeholder="Hasło"
                    class="@(ViewData.ModelState["haslo"]?.Errors.Count > 0 ? "input-error" : "")" />
                <span asp-validation-for="haslo" class="error-message"></span>
            </div>

            <div class="input-group">
                <input asp-for="imie" placeholder="Imię" />
                <span asp-validation-for="imie" class="error-message"></span>
            </div>

            <div class="input-group">
                <input asp-for="nazwisko" placeholder="Nazwisko" />
                <span asp-validation-for="nazwisko" class="error-message"></span>
            </div>

            <div class="input-group">
                <input asp-for="wiek" type="number" placeholder="Wiek" />
                <span asp-validation-for="wiek" class="error-message"></span>
            </div>

            <button type="submit" class="register-button">Zarejestruj</button>
        </form>

        <p class="login-link">
            Masz już konto? <a asp-controller="Login" asp-action="Index">Zaloguj się</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
